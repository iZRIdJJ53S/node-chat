!!! 5
html(lang='ja')
  head
    meta(charset='utf-8')
    title dotOne
    meta(name='description', content='')
    meta(name='author', content='')
    //
       Le HTML5 shim, for IE6-8 support of HTML elements 
    //if lt IE 9
      script(src='http://html5shim.googlecode.com/svn/trunk/html5.js')
    //
       Le styles 
    link(href='/css/bootstrap.min.css', rel='stylesheet')
    style(type='text/css')
      body {
      padding-top: 60px;
      padding-bottom: 40px;
      }
    link(href='/css/bootstrap.min.responsive', rel='stylesheet')
    //
       dotOneStyle 
    link(href='/css/dotone_style.css', rel='stylesheet')
    //
       Le fav and touch icons 
    link(rel='shortcut icon', href='images/favicon.ico')
    link(rel='apple-touch-icon', href='images/apple-touch-icon.png')
    link(rel='apple-touch-icon', sizes='72x72', href='images/apple-touch-icon-72x72.png')
    link(rel='apple-touch-icon', sizes='114x114', href='images/apple-touch-icon-114x114.png')
    script(src='/js/jquery-1.7.1.min.js')
  body
    .navbar.navbar-fixed-top
      .navbar-inner
        .container
          a.btn.btn-navbar(data-toggle='collapse', data-target='.nav-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.brand(href='/') dotOne
          .nav-collapse
            ul.nav
              li
                a(href='/dec') 宣言一覧
              li
                a(href='/suc') サクセス一覧
              li
                a(href='/what') dot1について
            ul.nav.pull-right
              li
                a(href='/auth/twitter') ログイン
          //
            /.nav-collapse 
    .container
      //
         topPickUp 
      .row
        .span8
          .main_declaration
            .info_box
            .info_box_txt
              h2 #{dec_top_data.title}
              p #{dec_top_data.description}
              .progress.progress-info.progress-striped(style='width: 50%;')
                .bar(style='width: #{dec_top_data.ratio}%;')
              h3 #{dec_top_data.supporter_num}／#{dec_top_data.target_num}人　
              div(id="deadline_#{dec_top_data.id}")
              p
                a.btn(href='/dec/#{dec_top_data.id}') 詳細 »
              script(type="text/javascript")
                $().ready(function(){
                  var d_obj = new Date("#{dec_top_data.deadline}");
                  $('#deadline_'+#{dec_top_data.id}).countdown({
                    until: d_obj,
                    layout: '残り {d<}{dn} 日 と {d>}{h<}{hn} 時間 {h>}{m<}{mnn} 分 {m>}{snn} 秒',
                    format: 'dhms'
                  });
                });


        .span4
          .login_box
            .what
              a(href='/what')
                img(src='/img/what.png')
            .auth
              .title 新規登録・ログイン
              .twitter
                a(href='/auth/twitter')
                  img(src='/img/sign-in-with-twitter-d.png')
      ul.nav.nav-tabs
        li.active
          a(href='#') みんなの宣言
      .row
        for declaration in declaration_list
          .span4
            h2 #{declaration.title}
            .well
              p #{declaration.description}
              .progress.progress-info.progress-striped
                .bar(style='width: #{declaration.ratio}%;')
              h3 #{declaration.supporter_num}／#{declaration.target_num}人　
              div(id="deadline_#{declaration.id}")
              p
                a.btn(href='/dec/#{declaration.id}') 詳細 »
              script(type="text/javascript")
                $().ready(function(){
                  var d_obj = new Date("#{declaration.deadline}");
                  $('#deadline_'+#{declaration.id}).countdown({
                    until: d_obj,
                    layout: '残り {d<}{dn} 日 と {d>}{h<}{hn} 時間 {h>}{m<}{mnn} 分 {m>}{snn} 秒',
                    format: 'dhms'
                  });
                });

      hr
      footer
        p © Company 2012
    //
       /container 

    script(src='/socket.io/socket.io.js')
    style(type="text/css")
      @import "/js/countdown/jquery.countdown.css";
    script(src="/js/countdown/jquery.countdown.min.js")
    script(src="/js/countdown/jquery.countdown-ja.js")



